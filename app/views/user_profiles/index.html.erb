<p id="notice"><%= notice %></p>

<h1>Listing User Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Lastname</th>
      <th>Firstname</th>
      <th>In regular</th>
      <th>Out regular</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr>
        <td><%= user_profile.user_id %></td>
        <td><%= user_profile.lastname %></td>
        <td><%= user_profile.firstname %></td>
        <td><%= user_profile.in_regular %></td>
        <td><%= user_profile.out_regular %></td>
        <td><%= link_to 'Show', user_profile %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(user_profile) %></td>
        <td><%= link_to 'Destroy', user_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

